function tekrar()
   xxbahis = math.random(0,36)
   yybahis = math.random(0,36)
   print("İlk oyuncu:", xx)
   print("ikinci oyuncu:", yy)
   if xxbahis > yybahis then
       print("İlk oyuncu kazandı ödülü:", Bahis1 + Bahis2)
   end
   if yybahis > xxbahis then
       print("ikinci oyuncu kazandı ödülü:", Bahis1 + Bahis2)
       end
   if yybahis == xxbahis then
       tekrar()
    end
end
-- random sayı olayı
local xbahis = math.random(1,36)
local ybahis = math.random(1,36)
--random sayı olayı
print("Bahisleri girin")
Bahis1 = 50
Bahis2 = 100
-- printler
print("ilk oyuncunun bahisi:", Bahis1.."TL")
print("ikinci oyuncunun bahisi:", Bahis2.."TL")
print("ilk oyuncu için çark dönüyor... ")
print("ilk oyuncuya çikan sayı", xbahis)
print("ikinci oyuncu için çark dönüyor")
print("ikinci oyuncuya çikan sayi", ybahis)
-- printler
-- ihtimal bilmemneleri
if xbahis > ybahis then
    print("İlk oyuncu kazandı ödülü:", Bahis1 + Bahis2)
end

if ybahis > xbahis then
    print("İkinci oyuncu kazandı ödülü:", Bahis1 + Bahis2)
end

if xbahis == ybahis then
    print("Sonuçlar eşit çikti tekrar döndürülüyor...")
    tekrar()
end
--ihtimal bilmemneleri

   
